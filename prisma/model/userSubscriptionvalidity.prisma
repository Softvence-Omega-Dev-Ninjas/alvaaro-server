model UserSubscriptionValidity {
    id             String           @unique @default(uuid())
    sellerId       String           @unique
    seller         Seller           @relation(fields: [sellerId], references: [id])
    subscribedPlan String           @unique
    subscription   SubscriptionPlan @relation(fields: [subscribedPlan], references: [id])
    startTime      DateTime
    expiryTime     DateTime
    payabeAmount   String
    createdAt      DateTime         @default(now())
    updatedAt      DateTime         @updatedAt

    @@unique([sellerId, subscribedPlan])
}
